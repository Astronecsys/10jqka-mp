/* Reset一些默认样式 */
page {
  background-color: #f4f4f4;
}

.container {
  padding: 15px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  margin: 10px;
}

.stock-info {
  margin-bottom: 20px;
}

.stock-info text {
  display: block;
  font-size: 16px;
  color: #333;
  line-height: 1.5;
  padding: 5px 0;
}

.stock-info .header {
  font-size: 18px;
  font-weight: bold;
  color: #007aff;
}

.charts {
  margin-top: 20px;
}

.charts image {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 20px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.order-book {
  margin-top: 20px;
}

.order-book text {
  display: block;
  font-size: 16px;
  color: #333;
  line-height: 1.5;
  padding: 5px 0;
}

.order-book text:before {
  content: '• ';
  color: #007aff;
}

.header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #007aff;
}
