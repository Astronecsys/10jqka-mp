/* login.wxss */
.page {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .login-form {
    width: 300px;
  }
  
  .input {
    width: 100%;
    height: 40px;
    padding: 0 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .tip {
    color: #999;
    font-size: 14px;
    margin-bottom: 10px;
  }
  
  .login-btn {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .login-btn.disabled {
    background-color: #999;
  }
  